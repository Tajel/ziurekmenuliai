<% include ../partials/header %>

    <form action="/trtip/<%= trtip._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti transporto priemonės tipą</legend>

        <a href="/trtip" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į transporto priemonių sąrašą</a>
        </a>

        <!-- Form Name -->
        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden">
                <label class="data-editForm__content__input--label" for="trtip[doc]">trantipas</label>
                <div class="data-editForm__content__input--body">
                    <input id="doc" name="doc" type="text" placeholder="trantipas" class="data-editForm__content__input--body--text" value="trantipas">
                    <span class="data-editForm__content__input--body--span">trantipas</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="trtip[trtipas]">Transporto priemonės tipas</label>
                <div class="data-editForm__content__input--body">
                    <input id="trtip[trtipas]" name="trtip[trtipas]" type="text" placeholder="Transporto priemonės tipas" class="data-editForm__content__input--body--text"
                        required="" value="<%= trtip.trtipas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite transporto priemonės tipą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>