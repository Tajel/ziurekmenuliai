<% include ../partials/header %>

    <div class="page-header">
        <h1>TRANSPORTO PRIEMONĖS TIPAS
            <small>Sukurti naują, redaguoti, trinti</small>
        </h1>
        <p>
            <a class="btn btn-primary btn-large" href="/trtip/new">
                <i class="fa fa-plus" aria-hidden="true"></i> Naujas transporto priemonės tipas</a>
        </p>
        <hr>
    </div>
    <div class="row">
        <% alltrtip.forEach(function(alltrtip){ %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>
                            <strong>
                                <%= alltrtip.trtipas %>
                            </strong>
                        </h3>
                        <h4>
                        </h4>
                        <p>
                            <% if(currentUser && alltrtip.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                                <a href="/trtip/<%= alltrtip._id%>/edit" class="btn btn-primary" role="button">
                                    <i class="fa fa-pencil" aria-hidden="true"></i> REDAGUOTI</a>
                                <form id="delete-form" action="/trtip/<%=alltrtip._id%>?_method=DELETE" , method=POST>
                                    <button class="btn btn-danger">
                                        <i class="fa fa-trash-o"></i>
                                        TRINTI</button>
                                </form>
                                <% }%>
                        </p>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
    <% include ../partials/footer %>