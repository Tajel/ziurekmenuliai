<% include ../partials/header %>
    <form action="/automm/<%= automm._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti
            <%= automm.marke %>
                <%= automm.modelis %>
                    <%= automm.valstnr %>
        </legend>
        <a href="/automm" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į tr. priemonių sąrašą</a>
        </a>
        <!-- Form Name -->
        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden">
                <input class="data-editForm__content__input--body--text" type="text" name="automm[doc]" value="automm">
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="automm[idvVardasPav]">Atsakingas asmuo</label>
                <div class="data-newForm__content__input--body">
                    <select name="automm[idvVardasPav]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= automm.idvVardasPav %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.dvVardasPav !== undefined){ %>
                                <option>
                                    <%= data.dvVardasPav %>
                                </option>
                                <!-- ########## reikia sukurti vairuotojus *********** -->
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="automm[ikurrusis]">Kuro rūšis</label>
                <div class="data-newForm__content__input--body">
                    <select name="automm[ikurrusis]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= automm.ikurrusis %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.kurrusis !== undefined){ %>
                                <% console.log(data.kurrusis) %>
                                    <option>
                                        <%= data.kurrusis %>
                                    </option>
                                    <% } %>
                                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="automm[ipadkodas]">Padalinys</label>
                <div class="data-newForm__content__input--body">
                    <select name="automm[ipadkodas]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= automm.ipadkodas %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.padkodas !== undefined){ %>
                                <option>
                                    <%= data.padkodas %>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="automm[itrrus]">Transporto pr. rūšis</label>
                <div class="data-newForm__content__input--body">
                    <select name="automm[itrrus]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= automm.itrrus %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.trrus !== undefined){ %>
                                <option>
                                    <%= data.trrus %>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>