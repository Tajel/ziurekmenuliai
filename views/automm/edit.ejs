<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <h1 style="text-align: center">Redaguoti
                <%= automm.vairVardPav %>
                    <%= automm.ikurrusis %>
                        <%= automm.ipadkodas %>
            </h1>
        </header>
    </div>
    <div class="container">
        <div style="width: 40%; margin: 35px auto;">
            <form action="/automm/<%= automm._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="automm[doc]" value="automm" hidden>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automm[vairVardPav]" class="custom-select">
                     <option  selected><%=automm.vairVardPav%></option>
                    <% data.forEach(function(data){ %>
                        <% if(data.vairVardPav !== undefined){ %>
                        <% console.log('Atsakingas: '+data.vairVardPav) %>
                        <option><%= data.vairVardPav %></option>
                        <% } %>
                    <% }); %>
                </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automm[ikurrusis]" class="custom-select">
                     <option  selected><%=automm.ikurrusis%></option>
                    <% data.forEach(function(data){ %>
                        <% if(data.kurrusis !== undefined){ %>
                        <% console.log('Kuro rusis: '+data.kurrusis) %>
                        <option><%= data.kurrusis %></option>
                        <% } %>
                    <% }); %>
                </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automm[ipadkodas]" class="custom-select">
                     <option  selected><%=automm.ipadkodas%></option>
                    <% data.forEach(function(data){ %>
                        <% if(data.padkodas !== undefined){ %>
                        <% console.log('Padalinio Kodas: '+data.padkodas) %>
                        <option><%= data.padkodas %></option>
                        <% } %>
                    <% }); %>
                </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automm[itrrus]" class="custom-select">
                     <option  selected><%=automm.itrrus%></option>
                    <% data.forEach(function(data){ %>
                        <% if(data.trrus !== undefined){ %>
                        <% console.log('Transporto rusis: '+data.trrus) %>
                        <option><%= data.trrus %></option>
                        <% } %>
                    <% }); %>
                </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"><i class="fa fa-plus" aria-hidden="true"></i> Sukurti</button>
                </div>
            </form>
            <a href="/automm"><i class="fa fa-arrow-left" aria-hidden="true"></i> Atgal</a>
        </div>
    </div>

    <% include ../partials/footer %>