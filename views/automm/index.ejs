<% include ../partials/header %> 
<div class="container">
<header class="jumbotron">
   <div class="container">
       <h1>Transporto valdymo modulis!</h1>
       <p>Mazosios mechanizacijos priemonės</p>
       <p>
          <a class="btn btn-primary btn-large" href="/automm/new">Nauja transporto priemone</a>
          <a class="btn btn-primary btn-large" href="/kellap">MM transporto pr keliones lapai</a>
          <a class="btn btn-primary btn-large" href="/kellap/newmm">Naujas keliones lapas</a>
       
       </p>
   </div>
</header>
 <div class="container">
     
      </div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>1</th>
                  <th>2</th>
                  <th>3</th>
                  <th>4</th>
                  <th>5</th>
                  <th>6</th>
                  <th>7</th>
                  <!--<th>8</th>-->
                </tr>
              </thead>
              <tbody>
                <% alltrmm.forEach(function(trans){ %>
                    <tr>
                      <td><strong><%=trans.vairVardPav%></strong></td>
                      <td><strong><%=trans.ikurrusis%></strong></td>
                      <td><strong><%=trans.ipadkodas%></strong></td>
                      <td><strong><%=trans.itrrus%></strong></td>
                      <td>
                          <% if(currentUser && trans.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                            <a class="btn btn-xs btn-warning" href="/automm/<%= trans._id %>/edit">Redaguoti</a>
                            <% }%>
                      </td><td>
                          <% if(currentUser && trans.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                            <form id="delete-form" action="/automm/<%= trans._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Istrinti</button>
                            </form>
                            <% }%>
                      </td>
                      <!--<td><a href="/automm/<%= trans._id %>" class="btn btn-xs btn-primary">Detali informacija</a></td>-->
                      <td><a href="/kellap" class="btn btn-xs btn-primary">Kelionės lapai</a></td>
                    <% }); %>
                    </tr>
              </tbody>
            </table>
<% include ../partials/footer %>
  
</div>
