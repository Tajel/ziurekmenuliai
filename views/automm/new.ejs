<% include ../partials/header %>
    <div>
        <div class="row">
            <h1 style="text-align: center">Nauja transporto priemonė</h1>
            <div style="width: 30%; margin: 25px auto;">
                <a class="btn btn-default  " href="/automm">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Atgal</a>
                <hr>
                <form action="/automm" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="automm[doc]" value="automm" hidden>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automm[idvVardasPav]" class="custom-select">
                            <option selected>Pasirinkite ATSAKINGĄ asmenį</option>
                            <% data.forEach(function(data){ %>
                                <% if(data.dvVardasPav !== undefined){ %>
                                    <% console.log('Atsakingas: '+data.dvVardasPav) %>
                                        <option>
                                            <%= data.dvVardasPav %>
                                        </option>
                                        <% } %>
                                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automm[vairVardPav]" class="custom-select">
                            <option selected>Pasirinkite ATSAKINGĄ asmenį</option>
                            <% data.forEach(function(data){ %>
                                <% if(data.vairVardPav !== undefined){ %>
                                    <% console.log('Atsakingas: '+data.vairVardPav) %>
                                        <option>
                                            <%= data.vairVardPav %>
                                        </option>
                                        <% } %>
                                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automm[ikurrusis]" class="custom-select">
                            <option selected>Pasirinkite KURO rušį</option>
                            <% data.forEach(function(data){ %>
                                <% if(data.kurrusis !== undefined){ %>
                                    <% console.log('Kuro rusis: '+data.kurrusis) %>
                                        <option>
                                            <%= data.kurrusis %>
                                        </option>
                                        <% } %>
                                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automm[ipadkodas]" class="custom-select">
                            <option selected>Pasirinkite Padlinį</option>
                            <% data.forEach(function(data){ %>
                                <% if(data.padkodas !== undefined){ %>
                                    <% console.log('Padalinio Kodas: '+data.padkodas) %>
                                        <option>
                                            <%= data.padkodas %>
                                        </option>
                                        <% } %>
                                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automm[itrrus]" class="custom-select">
                            <option selected>Pasirinkite priemonės rūšį</option>
                            <% data.forEach(function(data){ %>
                                <% if(data.trrus !== undefined){ %>
                                    <% console.log('Transporto rusis: '+data.trrus) %>
                                        <option>
                                            <%= data.trrus %>
                                        </option>
                                        <% } %>
                                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">
                            <i class="fa fa-plus" aria-hidden="true"></i> Sukurti</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>