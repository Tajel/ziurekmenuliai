<% include ../partials/header %>

    <form action="/trrus" method="POST" class="data-newForm">
        <legend class="data-newForm__legend">Nauja transporto rūšis</legend>
        <a href="/vair" class="data-newForm__link">
            <svg class="data-newForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į Transporto rūšių sąrašą </a>
        <!-- Form Name -->

        <div class="data-newForm__content">
            <!-- Text input-->
            <div class="data-newForm__content__input--hidden">
                <label class="data-newForm__content__input--label" for="doc">trrusis</label>
                <div class="data-newForm__content__input--body">
                    <input id="doc" name="doc" type="text" placeholder="trrusis" class="data-newForm__content__input--body--text" value="trrusis">
                    <span class="data-newForm__content__input--body--span">trrusis</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="trruskodas">Transporto rūšies kodas</label>
                <div class="data-newForm__content__input--body">
                    <input id="trruskodas" name="trruskodas" type="text" placeholder="Transporto rūšies kodas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">Įrašykite transporto rūšies kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="trrus">Transporto rūšies pavadinimas</label>
                <div class="data-newForm__content__input--body">
                    <input id="trrus" name="trrus" type="text" placeholder="Transporto rūšies pavadinimas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">Įrašykite transporto rūšies pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Sukurti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>