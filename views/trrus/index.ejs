<% include ../partials/header %>
    <div class="data">
        <div class="data__page-header--main">TRANSPORTO RŪŠYS
            <small class="data__page-header--second">Sukurti naują, redaguoti, trinti</small>
        </div>
        <p class="data__page-header--new-item">
            <a class="data__page-header--link" href="/trrus/new">
                <svg class="data__page-header--icon">
                    <use xlink:href="/img/sprite.svg#icon-new-message">
                </svg>Nauja transporto rūšis</a>
        </p>
    </div>
    <div class="data__page-data">
        <% alltrrus.forEach(function(alltrrus){ %>
            <div class="data__page-data__main-tab">
                <div class="data__page-data__main-tab--header">
                    <%= alltrrus.trrus %>
                </div>
                <div class="data__page-data__main-tab--content">
                    <%= alltrrus.trruskodas %>
                </div>
                <% if(currentUser && alltrrus.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                    <div class="data__page-data__main-tab--buttons">
                        <a class="data__page-data__main-tab--buttons--edit" href="/trrus/<%= alltrrus._id%>/edit"> REDAGUOTI</a>
                        <form class="data__page-data__main-tab--buttons--del" action="/trrus/<%=alltrrus._id%>?_method=DELETE" , method=POST>
                            <button class="data__page-data__main-tab--buttons--btn">
                                TRINTI</button>
                        </form>
                    </div>
                    <% }%>
            </div>
            <% }); %>
    </div>
    <% include ../partials/footer %>