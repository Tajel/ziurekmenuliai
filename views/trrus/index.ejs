<% include ../partials/header %>
    <div class="page-header">
        <h1>TRANSPORTO RŪŠYS
            <small>Sukurti naują, redaguoti, trinti</small>
        </h1>
        <p>
            <a class="btn btn-primary btn-large" href="/trrus/new">Nauja transporto rūšis</a>
        </p>
    </div>
    <div class="row">
        <% alltrrus.forEach(function(alltrrus){ %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>
                            <strong>
                                <%= alltrrus.trrus %>
                            </strong>
                        </h3>
                        <h4>
                            <%= alltrrus.trruskodas %>
                        </h4>
                        <p>
                            <a href="/trrus/<%= alltrrus._id%>/edit" class="btn btn-primary" role="button">REDAGUOTI</a>
                            <form action="/trrus/<%=alltrrus._id%>?_method=DELETE" , method=POST>
                                <button class="btn btn-danger">TRINTI</button>
                            </form>
                        </p>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
    <% include ../partials/footer %>