<% include ../partials/header %>

    <form action="/trrus/<%= trrus._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti transporto rūšį </legend>
        <a href="/trrus" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į Transporto rūšių sąrašą</a>
        </a>

        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden">
                <label class="data-editForm__content__input--label" for="doc">trrusis</label>
                <div class="data-editForm__content__input--body">
                    <input id="doc" name="doc" type="text" placeholder="trrusis" class="data-editForm__content__input--body--text" value="trrusis">
                    <span class="data-editForm__content__input--body--span">trrusis</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-editForm__content__input--label" for="trrus[trruskodas]">Transporto rūšies kodas</label>
                <div class="data-editForm__content__input--body">
                    <input id="trruskodas" name="trrus[trruskodas]" type="text" placeholder="Transporto rūšies kodas" class="data-editForm__content__input--body--text"
                        value="<%= trrus.trruskodas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite transporto rūšies kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-editForm__content__input--label" for="trrus[trrus]">Transporto rūšies pavadinimas</label>
                <div class="data-editForm__content__input--body">
                    <input id="trrus" name="trrus[trrus]" type="text" placeholder="Transporto rūšies pavadinimas" class="data-editForm__content__input--body--text"
                        value="<%= trrus.trrus %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite transporto rūšies pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>