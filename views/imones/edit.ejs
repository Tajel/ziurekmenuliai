<% include ../partials/header %>

    <form action="/imones/<%= imone._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti Įmonę
            <%= imone.imonespavadinimas %>
        </legend>
        <a href="/imones" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg>Atgal į Įmonių katalogą</a>
        </a>
        <!-- Form Name -->
        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden">
                <label class="data-editForm__content__input--label" for="imone[doc]">imone</label>
                <div class="data-editForm__content__input--body">
                    <input id="imone[doc]" name="imone[doc]" type="text" placeholder="imone" class="data-editForm__content__input--body--text"
                        value="imone">
                    <span class="data-editForm__content__input--body--span">imone</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="imone[imonessutrumpkodas]">Kodinis pavadinimas</label>
                <div class="data-editForm__content__input--body">
                    <input id="imone[imonessutrumpkodas]" name="imone[imonessutrumpkodas]" type="text" placeholder="Kodinis pavadinimas" class="data-editForm__content__input--body--text"
                        value="<%= imone.imonessutrumpkodas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite trumpą įmonės pav.</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="imone[imonespavadinimas]">Pilnas įmonės pavadinimas</label>
                <div class="data-editForm__content__input--body">
                    <input id="imone[imonespavadinimas]" name="imone[imonespavadinimas]" type="text" placeholder="Pilnas įmonės pavadinimas"
                        class="data-editForm__content__input--body--text" value="<%= imone.imonespavadinimas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite pilną įmonės pavadinimą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="imone[imonesimkodas]">Registracijos kodas, įk.</label>
                <div class="data-editForm__content__input--body">
                    <input id="imone[imonesimkodas]" name="imone[imonesimkodas]" type="text" placeholder="Registracijos kodas, įk." class="data-editForm__content__input--body--text"
                        value="<%= imone.imonesimkodas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite registracijos kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="imone[imonespvmkodas]">PVM kodas</label>
                <div class="data-editForm__content__input--body">
                    <input id="imone[imonespvmkodas]" name="imone[imonespvmkodas]" type="text" placeholder="PVM kodas" class="data-editForm__content__input--body--text"
                        value="<%= imone.imonespvmkodas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite PVM kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="imone[imonesadresas]">Adresas</label>
                <div class="data-editForm__content__input--body">
                    <input id="imone[imonesadresas]" name="imone[imonesadresas]" type="text" placeholder="Adresas" class="data-editForm__content__input--body--text"
                        value="<%= imone.imonesadresas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite įmonės adresą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>