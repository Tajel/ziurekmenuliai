<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Redaguoti <%= imone.imonespavadinimas %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/imones/<%= imone._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="imone[imonessutrumpkodas]" value="<%= imone.imonessutrumpkodas %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imone[imonespavadinimas]" value="<%= imone.imonespavadinimas %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imone[imonesimkodas]" value="<%= imone.imonesimkodas %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imone[imonesadresas]" value="<%= imone.imonesadresas %>">
                </div><div class="form-group">
                    <input class="form-control" type="text" name="imone[imonespvmkodas]" value="<%= imone.imonespvmkodas %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imone[doc]" hidden value="<%= imone.doc %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/imones">Atgal i imoniu kataloga</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

