<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Ivesti nauja ikaini <%= auto.marke %><%= auto.modelis %><%= auto.valstnr %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/autokrov/<%= auto._id %>/autoik" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="autoik[doc]" value="autoik" hidden>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="autoik[autoid]" value="<%= auto._id %>" hidden>
                </div>
                
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="autoik[idarbrus]" class="custom-select">
                         <option  selected>Pasirinkite darbo rusi</option> 
                        <% darbrus.forEach(function(data){ %>
                            <% if(data.darbrus !== undefined){ %>
                            <option><%= data.darbrus %></option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="autoik[trikain]" placeholder="Ikainis">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="autoik[idarbvnt]" placeholder="Val, d., tkm.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/autokrov/<%= auto._id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

