
<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <h1 style="text-align: center">Redaguoti <%= kellap.marke %>   <%= kellap.modelis %>   <%= kellap.valstnr %></h1>
    </header>
</div>
<div class="container">
    <div style="width: 85%; margin: 35px auto;">
        <form action="/kellap/<%= kellap._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="kellap[doc]" value="<%= kellap.marke %>" readonly>
            </div>
            <div class="form-group">
                <select style="width: 100%; height: 34px" name="kellap[atsaking]" class="custom-select">
                 <option  selected>Pasirinkite ATSAKINGĄ asmenį</option> 
                <% data.forEach(function(data){ %>
                    <% if(data.vairuotojas !== undefined){ %>
                    <option><%= data.vairuotojas %></option>  <!-- ########## reikia sukurti vairuotojus *********** -->
                    <% } %>
                <% }); %>
            </select>
            </div>
            <div>
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
<h1>CIA duomenu suvedimo vieta</h1>

<h3>KURAS</h3>
<h3>TRANSPORTO PR DARBAS</h3>
<h3>VAIRUOTOJO ATLYGINIMAS</h3>
        <a href="/kellap">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>

