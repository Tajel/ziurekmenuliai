<% include ./partials/header %>
    <div class="login">
        <form class="login__form" action="/login" method="POST">
            <!-- Form Name -->
            <legend class="login__form--legend">Suveskite prisijungimo duomenis:</legend>
            <!-- Text input-->
            <div class="login__form--userform">
                <label class="login__form--userform__label" for="name">
                    <svg class="login__form__icon">
                        <use xlink:href="/img/sprite.svg#icon-user"></use>
                    </svg>
                    <span>Vardas</span>
                </label>
                <div class="login__form--userform__input">
                    <input name="username" type="text" placeholder="vardas" class="login__form--userform__input--text" required="">
                    <span class="login__form--userform__input--span">įveskite prisijungimo vardą</span>
                </div>
            </div>

            <!-- Password input-->
            <div class="login__form--pswform">
                <label class="login__form--pswform__label" for="password">
                    <svg class="login__form__icon">
                        <use xlink:href="/img/sprite.svg#icon-key"></use>
                    </svg>
                    <span>Slaptažodis</span>
                </label>
                <div class="login__form--pswform__input">
                    <input name="password" type="password" placeholder="slaptažodis" class="login__form--pswform__input--text" required=""></input>
                    <span class="login__form--pswform__input--span">įveskite slaptažodį</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__content__button">
                <button name="submit" class="data-editForm__content__button--submit ">
                    <svg class="data-editForm__content__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-login"></use>
                    </svg> Prisijungti
                </button>
            </div>
        </form>
    </div>
    <% include ./partials/footer %>