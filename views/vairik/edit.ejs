<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Redaguoti ikaini</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/vair/<%= vairid %>/vairik/<%=ikainis._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="vairik[idarbrus]" class="custom-select">
                     <option  selected><%= ikainis.idarbrus %></option> 
                    <% darbrus.forEach(function(data){ %>
                        <% if(data.darbrus !== undefined){ %>
                        <option><%= data.darbrus %></option>
                        <% } %>
                    <% }); %>
                </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vairik[vairikain]" placeholder="Ikainis" value="<%= ikainis.vairikain %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vairik[vairid]" placeholder="markÄ—" readonly value="<%= ikainis.vairid %>" hidden>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vairik[idarbvnt]" placeholder="Val, d., tkm." value="<%= ikainis.idarbvnt %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/vair/<%= vairid %>">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>