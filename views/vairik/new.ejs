<% include ../partials/header %>
    <form action="/vair/<%= vair._id %>/vairik" method="POST" class="form-horizontal">
        <fieldset>
            <a href="/vair/<%= vair._id %>">Atgal į Vairuotojo duomenis</a>
            <!-- Form Name -->
            <legend>Naujas Vairuotojo įkainis</legend>

            <!-- Text input-->
            <div class="form-group" hidden>
                <label class="col-md-4 control-label" for="vairik[vairid]">Text Input</label>
                <div class="col-md-4">
                    <input id="vairik[vairid]" name="vairik[vairid]" type="text" placeholder="<%= vair._id %>" class="form-control input-md"
                        value="<%= vair._id %>">
                    <span class="help-block">help</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group" hidden>
                <label class="col-md-4 control-label" for="vairik[doc]">vairik</label>
                <div class="col-md-4">
                    <input id="vairik[doc]" name="vairik[doc]" type="text" placeholder="vairik" class="form-control input-md" value="vairik">
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="vairik[idarbrus]">Darbo rūšis</label>
                <div class="col-md-4">
                    <select id="vairik[idarbrus]" name="vairik[idarbrus]" class="form-control">
                        <% darbrus.forEach(function(data){ %>
                            <% if(data.darbrus !== undefined){ %>
                                <option value="<%= data.darbrus %>">&lt;%= data.darbrus %&gt;</option>
                                <% } %>
                                    <% }); %>
                    </select>
                    <span class="help-block">Pasirinkite darbo rūšį</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="vairik[vairikain]">Įkainis</label>
                <div class="col-md-4">
                    <input id="vairik[vairikain]" name="vairik[vairikain]" type="text" placeholder="Įkainis" class="form-control input-md">
                    <span class="help-block">Įrašykite įkainį</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="vairik[idarbvnt]">Mato vienetas</label>
                <div class="col-md-4">
                    <input id="vairik[idarbvnt]" name="vairik[idarbvnt]" type="text" placeholder="Val, d., tkm." class="form-control input-md">
                    <span class="help-block">Įrašykite mato vienetą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="submit">Sukurti</label>
                <div class="col-md-4">
                    <button id="submit" name="submit" class="btn btn-info">Sukurti</button>
                </div>
            </div>

        </fieldset>
    </form>
    <% include ../partials/footer %>