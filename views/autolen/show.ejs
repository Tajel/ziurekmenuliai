                <tr>
                    <th scope="row">10</th>
                    <td>Atsakingas asmuo:</td>
                    <td><strong><%=autolen.atsaking%></strong></td>
                </tr>
                <tr>
                    <th scope="row">13</th>
                    <td>bazė:</td>
