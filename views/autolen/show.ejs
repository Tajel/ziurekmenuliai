                <tr>
                    <th scope="row">18</th>
                    <td>Pagrindinis paskirtas vairuotojas:</td>
                    <td><strong><%=autolen.ipagvair%></strong></td>
                </tr>
                <tr>
                    <th scope="row">5</th>
                    <td>Transporto pr rūšis:</td>
                    <td><strong><%=autolen.itrrus%></strong></td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>Transporto pr tipas:</td>
                    <td><strong><%=autolen.itrtipas%></strong></td>
                </tr>
                <tr>
                    <th scope="row">16</th>
                    <td>Kelių mokestis - Vinjetė:</td>
                    <td><strong><%=autolen.vinjet%></strong></td>
                </tr>
            </tbody>
        </table>
        <hr>
        <% if(currentUser && autolen.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
            <a class="btn btn-xs btn-warning" href="/autolen/<%= autolen._id %>/edit">Redaguoti</a>
            <form id="delete-form" action="/autolen/<%= autolen._id %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">Istrinti</button>
            </form>
            <% }%>
                <a href="/autolen">Atgal</a>
    </div>
    <p><em> Sukurė <a href="/users/<%= autolen.author.id %>"><%= autolen.author.username %></a></em></p>

    <% include ../partials/footer %>