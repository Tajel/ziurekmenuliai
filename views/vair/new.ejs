<% include ../partials/header %>

    <form action="/vair" method="POST" class="data-newForm">
        <legend class="data-newForm__legend">Naujas Vairuotojas</legend>
        <a href="/vair" class="data-newForm__link">
            <svg class="data-newForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į vairuotojų sąrašą </a>
        <!-- Form Name -->

        <div class="data-newForm__content">
            <!-- Text input-->
            <div class="data-newForm__content__input--hidden">
                <label class="data-newForm__content__input--label" for="vair[doc]">vairuot</label>
                <div class="data-newForm__content__input--body">
                    <input id="vair[doc]" name="vair[doc]" type="text" placeholder="vairuot" class="data-newForm__content__input--body--text"
                        value="vairuot">
                    <span class="data-newForm__content__input--body--span">vairuot</span>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="vair[ipadkodas]">Padalinys</label>
                <div class="data-newForm__content__input--body">
                    <select id="vair[ipadkodas]" name="vair[ipadkodas]" class="data-newForm__content__input--body--text">
                        <% pad.forEach(function(pad){ %>
                            <option value="<%= pad.padkodas %>" class="data-newForm__content__input--body--text">
                                <%= pad.padkodas %>
                            </option>
                            <% }); %>
                    </select>
                    <span class="data-newForm__content__input--body--span">pasirinkite padalinį</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="vair[vairkodas]">Vairuotojo kodas</label>
                <div class="data-newForm__content__input--body">
                    <input id="vair[vairkodas]" name="vair[vairkodas]" type="text" placeholder="Vairuotojo kodas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">įrašykite vairuotojo kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="vair[vairVardPav]">Vairuotojo vardas pavarde</label>
                <div class="data-newForm__content__input--body">
                    <input id="vair[vairVardPav]" name="vair[vairVardPav]" type="text" placeholder="Vairuotojo vardas pavarde" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">įrašykite vardą ir pavardę</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="vair[vairVard]">Vairuotojo vardas</label>
                <div class="data-newForm__content__input--body">
                    <input id="vair[vairVard]" name="vair[vairVard]" type="text" placeholder="Vairuotojo vardas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">įrašykite Vardą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="vair[vairPav]">Vairuotojo pavardė</label>
                <div class="data-newForm__content__input--body">
                    <input id="vair[vairPav]" name="vair[vairPav]" type="text" placeholder="Vairuotojo pavardė" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">Įrašykite Pavardę</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Sukurti
                </button>
            </div>
        </div>
    </form>

    <% include ../partials/footer %>