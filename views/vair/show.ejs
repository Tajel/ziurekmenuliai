<% include ../partials/header %>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h1> Detalūs Vairuotojo duomenys</h1>
            <p>
                <a href="/vair">Atgal į vairuotojų sąrašą </a>
            </p>
        </div>


        <!-- Table -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Eil. Nr.</th>
                    <th>Pavadinimas </th>
                    <th>Duomenys </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Vardas:</td>
                    <td>
                        <strong>
                            <%=vair.vairVard%>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Pavardė:</td>
                    <td>
                        <strong>
                            <%=vair.vairPav%>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Pilnas Vardas</td>
                    <td>
                        <strong>
                            <%=vair.vairVardPav%>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>Tabelio kodas:</td>
                    <td>
                        <strong>
                            <%=vair.vairkodas%>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <th scope="row">5</th>
                    <td>Padalinys:</td>
                    <td>
                        <strong>
                            <%=vair.ipadkodas%>
                        </strong>
                    </td>
                </tr>
            </tbody>
            <div class="panel-footer">
                <form id="delete-form" action="/vair/<%= vair._id %>?_method=DELETE" method="POST" class="pull-right">
                    <button class="btn btn-danger">TRINTI</button>
                    <a class="btn btn-primary" role="button" href="/vair/<%= vair._id %>/edit">REDAGUOTI</a>
                    <a class="btn btn-outline-success" href="/vair/<%= vair._id %>/vairik/new">Naujas Ikainis</a>
                </form>
            </div>
        </table>
    </div>

    <!-- <hr> -->
    <i class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h1> Įkainis</h1>
        </div>
        <% vair.ikainis.forEach(function(ikainis){ %>
            <h4>
                <%= ikainis.idarbrus %>
                    <%= ikainis.idarbvnt %>
                        <%= ikainis.vairikain %>
                            <% if(currentUser && ikainis.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                                <form style="display: inline" class="pull-right" action="/vair/<%=vair._id%>/vairik/<%=ikainis._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">TRINTI</button>
                                    <a href="/vair/<%=vair._id%>/vairik/<%=ikainis._id%>/edit" a class="btn  btn-primary" role="button">Redaguoti</a>
                                </form>
                                <% } %>
                                    <% }) %>
            </h4>
    </i>
    <hr>
    <small> Sukūrė
        <a href="/users/<%= vair.author.id %>">
            <%= vair.author.username %>
        </a>
    </small>
    </p>
    <% include ../partials/footer %>