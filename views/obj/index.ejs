<% include ../partials/header %>

    <div class="data">
        <div class="data__page-header--main">OBJEKTAI
            <br>
            <small class="data__page-header--second">Sukurti naujÄ…, redaguoti, trinti</small>
        </div>
        <p class="data__page-header--new-item">
            <a class="data__page-header--link" href="/obj/new">
                <svg class="data__page-header--icon">
                    <use xlink:href="/img/sprite.svg#icon-new-message">
                </svg>Naujas objektas</a>
        </p>
    </div>
    <div class="data__page-data">
        <% allobjekt.forEach(function(allobj){ %>
            <div class="data__page-data__main-tab">
                <div class="data__page-data__main-tab--header">
                    <%= allobj.objpav %>
                </div>
                <div class="data__page-data__main-tab--content">Objekto kodas:
                    <%= allobj.objkodas %>
                </div>
                <div class="data__page-data__main-tab--content">Pagr. DV:
                    <%= allobj.dvVadasPav %>
                </div>
                <% if(currentUser && allobj.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                    <div class="data__page-data__main-tab--buttons">
                        <a class="data__page-data__main-tab--buttons--edit" href="/obj/<%= allobj._id%>/edit">
                            REDAGUOTI</a>
                        <form class="data__page-data__main-tab--buttons--del" action="/obj/<%=allobj._id%>?_method=DELETE" method=POST>
                            <button class="data__page-data__main-tab--buttons--btn">TRINTI</button>
                        </form>
                    </div>
                    <% }%>
            </div>

            <% }); %>
    </div>
    <% include ../partials/footer %>