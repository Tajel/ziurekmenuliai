<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Transporto valdymo modulis!</h1>
             <p>Objektai</p>
             <p>
                <a class="btn btn-primary btn-large" href="/obj/new">Naujas objektas</a>
             </p>
         </div>
         </div>
     
     <div class="container">
         <table class="table table-hover"> 
          <thead>
            <tr>
              <th>Darbu vadovas</th>
              <th>Objekto kodas</th>
              <th>Objekto Pavadinimas</th>
              <th>Redaguoti</th>
              <th>Trinti</th>
            </tr>
          </thead>
          <tbody>
            <% allobjekt.forEach(function(allobj){ %>
            <tr>
                <td><%= allobj.dvVadasPav %></td>
                <td><%= allobj.objkodas %></td>
                <td><%= allobj.objpav %></td>
                <td><a class="btn btn-xs btn-warning" href="/obj/<%= allobj._id%>/edit">REDAGUOTI</a>
                <td>
                    <form id="delete-form" action="/obj/<%=allobj._id%>?_method=DELETE" , method=POST>
                       <button class="btn btn-xs btn-danger">TRINTI</button>
                   </form> 
                </td>
            </tr>
            <% }); %>
          </tbody>
    </table>
</div>

<% include ../partials/footer %>
