<% include ../partials/header %>

    <form action="/obj" method="POST" class="data-newForm">
        <legend class="data-newForm__legend">Naujas Objektas</legend>
        <a href="/vair" class="data-newForm__link">
            <svg class="data-newForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į Objektų sąrašą </a>
        <!-- Form Name -->

        <div class="data-newForm__content">
            <!-- Text input-->
            <div class="data-newForm__content__input--hidden">
                <label class="data-newForm__content__input--label" for="doc">objektas</label>
                <div class="data-newForm__content__input--body">
                    <input id="doc" name="doc" type="text" placeholder="objektas" class="data-newForm__content__input--body--text" value="objektas">
                    <span class="data-newForm__content__input--body--span">objektas</span>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="dvVadasPav">Darbų vadovas</label>
                <div class="data-newForm__content__input--body">
                    <select id="dvVadasPav" name="dvVadasPav" class="data-newForm__content__input--body--text">
                        <% allDv.forEach(function(dv){ %>
                            <option value="<%= dv.dvVadasPav %>" class="data-newForm__content__input--body--text">
                                <%= dv.dvVadasPav %>
                            </option>
                            <% }); %>
                    </select>
                    <span class="data-newForm__content__input--body--span">pasirinkite darbų vadovą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="objkodas">Objekto kodas</label>
                <div class="data-newForm__content__input--body">
                    <input id="objkodas" name="objkodas" type="text" placeholder="Objekto kodas pvz: v001/17" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">rašykite objekto kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="objpav">Objekto pavadinimas</label>
                <div class="data-newForm__content__input--body">
                    <input id="objpav" name="objpav" type="text" placeholder="Objekto pavadinimas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">įrašykite objekto pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Sukurti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>