<% include ../partials/header %>

    <form action="/obj" method="POST" class="form-horizontal">
        <fieldset>
            <a href="/obj">
                <i class="fa fa-arrow-left" aria-hidden="true"></i> Atgal į Objektų sąrašą</a>
            <!-- Form Name -->
            <legend>Naujas Objektas</legend>
            //
            <hr>
            <!-- Text input-->
            <div class="form-group" hidden>
                <label class="col-md-4 control-label" for="doc">objektas</label>
                <div class="col-md-4">
                    <input id="doc" name="doc" type="text" placeholder="objektas" class="form-control input-md" value="objektas">
                    <span class="help-block">objektas</span>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="dvVadasPav">Darbų vadovas</label>
                <div class="col-md-4">
                    <select id="dvVadasPav" name="dvVadasPav" class="form-control">
                        <% allDv.forEach(function(dv){ %>
                            <option value="<%= dv.dvVadasPav %>">
                                <%= dv.dvVadasPav %>
                            </option>
                            <% }); %>
                    </select>
                    <span class="help-block">Pasirinkite darbų vadovą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="objkodas">Objekto kodas</label>
                <div class="col-md-4">
                    <input id="objkodas" name="objkodas" type="text" placeholder="Objekto kodas pvz: v001/17" class="form-control input-md">
                    <span class="help-block">Įrašykite objekto kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="objpav">Objekto pavadinimas</label>
                <div class="col-md-4">
                    <input id="objpav" name="objpav" type="text" placeholder="Objekto pavadinimas" class="form-control input-md">
                    <span class="help-block">Įrašykite objekto pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="submit">
                    </i>Sukurti</label>
                <div class="col-md-4">
                    <button id="submit" name="submit" class="btn btn-info">
                        <i class="fa fa-plus" aria-hidden="true"></i> Sukurti</button>
                </div>
            </div>

        </fieldset>
    </form>
    <% include ../partials/footer %>