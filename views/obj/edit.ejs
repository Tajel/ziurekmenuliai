<% include ../partials/header %>

    <form action="/obj/<%= obj._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti:
            <%= obj.objkodas %> Objektą</legend>
        <a href="/obj" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg>Atgal į Objektų sąrašą</a>

        <!-- Form Name -->
        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden" hidden>
                <label class="data-editForm__content__input--label" for="doc">objektas</label>
                <div class="data-editForm__content__input--body">
                    <input id="doc" name="obj[doc]" type="text" placeholder="objektas" class="data-editForm__content__input--body--text" value="objektas">
                    <span class="data-editForm__content__input--body--span">objektas</span>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="idvVardasPav">Darbų vadovas</label>
                <div class="data-editForm__content__input--body">
                    <select id="idvVardasPav" name="obj[idvVardasPav]" class="data-editForm__content__input--body--text">
                        <option value="<%= obj.idvVardasPav %>">
                        </option>
                        <% allDv.forEach(function(dv){ %>
                            <option value="<%= dv.dvVardasPav %>">
                                <%= dv.dvVardasPav %>
                            </option>
                            <% }); %>
                    </select>
                    <span class="data-editForm__content__input--body--span">pasirinkite darbų vadovą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="objkodas">Objekto kodas</label>
                <div class="data-editForm__content__input--body">
                    <input id="objkodas" name="obj[objkodas]" type="text" placeholder="Objekto kodas pvz: v001/17" class="data-editForm__content__input--body--text"
                        value="<%= obj.objkodas %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite objekto kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="objpav">Objekto pavadinimas</label>
                <div class="data-editForm__content__input--body">
                    <input id="objpav" name="obj[objpav]" type="text" placeholder="Objekto pavadinimas" class="data-editForm__content__input--body--text"
                        value="<%= obj.objpav %>">
                    <span class="data-editForm__content__input--body--span">Įrašykite objekto pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>