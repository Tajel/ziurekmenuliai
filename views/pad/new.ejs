<% include ../partials/header %>
    <form action="/pad" method="POST" class="data-newForm">
        <legend class="data-newForm__legend">Naujas Padalinys</legend>
        <a href="/pad" class="data-newForm__link">
            <svg class="data-newForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į Padalinių sąrašą</a>
        </a>
        <!-- Form Name -->
        <div class="data-newForm__content">
            <!-- Text input-->
            <div class="data-newForm__content__input--hidden">
                <label class="data-newForm__content__input--label" for="doc">Text Input</label>
                <div class="data-newForm__content__input--body">
                    <input id="doc" name="doc" value="padalinys" type="text" placeholder="placeholder" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">help</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="padkodas">Padalinio kodas</label>
                <div class="data-newForm__content__input--body">
                    <input id="padkodas" name="padkodas" type="text" placeholder="Padalinio kodas" class="data-newForm__content__input--body--text"
                        required="">
                    <span class="data-newForm__content__input--body--span">Įrašykite padalinio kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="padpavadinimas">Padalinio pavadinimas</label>
                <div class="data-newForm__content__input--body">
                    <input id="padpavadinimas" name="padpavadinimas" type="text" placeholder="Padalinio pavadinimas" class="data-newForm__content__input--body--text"
                        required="">
                    <span class="data-newForm__content__input--body--span">Įrašykite padalinio pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>