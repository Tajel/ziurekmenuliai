<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= pad.padpavadinimas %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/pad/<%= pad._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="pad[padkodas]" readonly value="<%= pad.padkodas %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pad[padpavadinimas]" value="<%= pad.padpavadinimas %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pad[doc]" readonly value="<%= pad.doc %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Pakeisti !</button>
                </div>
            </form>
            <a href="/pad">Atgal</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

