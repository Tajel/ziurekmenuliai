<% include ../partials/header %>

    <form action="/pad/<%= pad._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti Padalinį:
            <%= pad.padpavadinimas %>
        </legend>
        <a href="/pad" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į Padalinių sąrašą</a>
        </a>
        <!-- Form Name -->
        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden">
                <label class="data-editForm__content__input--label" for="doc">Text Input</label>
                <div class="data-editForm__content__input--body">
                    <input id="doc" name="pad[doc]" value="padalinys" type="text" class="data-editForm__content__input--body--text">
                    <span class="data-editForm__content__input--body--span">help</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="padkodas">Padalinio kodas</label>
                <div class="data-editForm__content__input--body">
                    <input id="padkodas" name="pad[padkodas]" type="text" placeholder="Padalinio kodas" class="data-editForm__content__input--body--text"
                        required="" value="<%= pad.padkodas %>" readonly>
                    <span class="data-editForm__content__input--body--span">Įrašykite padalinio kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-editForm__content__input">
                <label class="data-editForm__content__input--label" for="padpavadinimas">Padalinio pavadinimas</label>
                <div class="data-editForm__content__input--body">
                    <input id="padpavadinimas" name="pad[padpavadinimas]" value="<%= pad.padpavadinimas %>" type="text" placeholder="Padalinio pavadinimas"
                        class="data-editForm__content__input--body--text" required="">
                    <span class="data-editForm__content__input--body--span">Įrašykite padalinio pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>