<% include ../partials/header %>
    <form action="/autokrov/<%= autokr._id %>?_method=PUT" method="POST" class="data-editForm">
        <legend class="data-editForm__legend">Redaguoti
            <%= autokr.marke %>
                <%= autokr.modelis %>
                    <%= autokr.valstnr %>
        </legend>
        <a href="/autokrov" class="data-editForm__link">
            <svg class="data-editForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į tr. priemonių sąrašą</a>
        </a>
        <!-- Form Name -->
        <div class="data-editForm__content">
            <!-- Text input-->
            <div class="data-editForm__content__input--hidden">
                <input class="data-editForm__content__input--body--text" type="text" name="autokr[doc]" value="autokrov">
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[marke]">Markė</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[marke]" placeholder="markė" value="<%= autokr.marke %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[modelis]">Modelis</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[modelis]" placeholder="modelis" value="<%= autokr.modelis %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[valstnr]">Valstybinis numeris</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[valstnr]" placeholder="valstybinis numeris"
                        value="<%= autokr.valstnr %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[id]">ID</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[id]" placeholder="id" value="<%= autokr.id %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[inventnr]">Inventorinis numeris</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[inventnr]" placeholder="inventorinis numeris"
                        value="<%= autokr.inventnr %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[gammetai]">Pagaminimo metai</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[gammetai]" placeholder="gamybos metai"
                        value="<%= autokr.gammetai %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[atsaking]">Atsakingas asmuo</label>
                <div class="data-newForm__content__input--body">
                    <select name="autokr[atsaking]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= autokr.atsaking %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.dvVardasPav !== undefined){ %>
                                <option>
                                    <%= data.dvVardasPav %>
                                </option>
                                <!-- ########## reikia sukurti vairuotojus *********** -->
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[baze]">Bazė</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[baze]" placeholder="bazė" value="<%= autokr.baze %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[drcivil]">TPVCAP</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[drcivil]" placeholder="draudimas civilinis"
                        value="<%= autokr.drcivil %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[drkasko]">Kasko</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[drkasko]" placeholder="draudimas kasko"
                        value="<%= autokr.drkasko %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[euro]">Euro taršos lygis</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[euro]" placeholder="euro taršos lygis"
                        value="<%= autokr.euro %>">
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[ikurrusis]">Kuro rūšis</label>
                <div class="data-newForm__content__input--body">
                    <select name="autokr[ikurrusis]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= autokr.ikurrusis %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.kurrusis !== undefined){ %>
                                <% console.log(data.kurrusis) %>
                                    <option>
                                        <%= data.kurrusis %>
                                    </option>
                                    <% } %>
                                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[ipadkodas]">Padalinys</label>
                <div class="data-newForm__content__input--body">
                    <select name="autokr[ipadkodas]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= autokr.ipadkodas %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.padkodas !== undefined){ %>
                                <option>
                                    <%= data.padkodas %>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[ipagvair]">Paskirtas vairuotojas</label>
                <div class="data-newForm__content__input--body">
                    <select name="autokr[ipagvair]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= autokr.ipagvair %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.vairVardPav !== undefined){ %>
                                <option>
                                    <%= data.vairVardPav %>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[itrrus]">Transporto pr. rūšis</label>
                <div class="data-newForm__content__input--body">
                    <select name="autokr[itrrus]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= autokr.itrrus %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.trrus !== undefined){ %>
                                <option>
                                    <%= data.trrus %>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[itrtipas]">Transporto priemonės tipas</label>
                <div class="data-newForm__content__input--body">
                    <select name="autokr[itrtipas]" class="data-editForm__content__input--body--text">
                        <option selected>
                            <%= autokr.itrtipas %>
                        </option>
                        <% data.forEach(function(data){ %>
                            <% if(data.trtipas !== undefined){ %>
                                <option>
                                    <%= data.trtipas %>
                                </option>
                                <% } %>
                                    <% }); %>
                    </select>
                </div>
            </div>
            <div class="data-editForm__content__input">
                <label class="data-newForm__content__input--label" for="autokr[vinjet]">Kelių mokestis</label>
                <div class="data-newForm__content__input--body">
                    <input class="data-editForm__content__input--body--text" type="text" name="autokr[vinjet]" placeholder="Kelių mokesčiai"
                        value="<%= autokr.vinjet %>">
                </div>
            </div>
            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Redaguoti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>