<% include ../partials/header %>
    <legend class="data-editForm__legend">
        KROVINIAI AUTOMOBILIAI
    </legend>
    <a href="/autokrov" class="data-editForm__link">
        <svg class="data-editForm__link__icon">
            <use xlink:href="/img/sprite.svg#icon-back"></use>
        </svg> Atgal</a>
    </a>
    <div class="detailed-info__content">
        <div class="detailed-info__content__main">
            <header class="detailed-info__content__main__header">
                <span class="detailed-info__content__main__header--main">
                    Detalūs krovininio automobilio duomenys
                </span>
                <% if(currentUser && autokrov.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                    <div class="detailed-info__content__main__header__buttons">
                        <a class="detailed-info__content__main__header__buttons--editbtn" role="button" href="/autokrov/<%= autokrov._id %>/edit">
                            REDAGUOTI</a>
                        <form class="detailed-info__content__main__header__buttons--delete-form" action="/autokrov/<%= autokrov._id %>?_method=DELETE"
                            method="POST">
                            <button class="detailed-info__content__main__header__buttons--delbtn">
                                TRINTI</button>
                        </form>
                    </div>
                    <% }%>
            </header>
            <!-- Text input-->
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Markė">Markė</label>
                <div class="detailed-info__content__main__info--body" name="Markė">
                    <%=autokrov.marke%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Modelis">Modelis</label>
                <div class="detailed-info__content__main__info--body" name="Modelis">
                    <%=autokrov.modelis%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Valstybinisnumers">Valstybinis numers</label>
                <div class="detailed-info__content__main__info--body" name="Valstybinisnumers">
                    <%=autokrov.valstnr%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="ID">ID</label>
                <div class="detailed-info__content__main__info--body" name="ID">
                    <%=autokrov.id%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Inventorinisnumeris">Inventorinis numeris</label>
                <div class="detailed-info__content__main__info--body" name="Inventorinisnumeris">
                    <%=autokrov.inventnr%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Gamybosmetai">Gamybos metai</label>
                <div class="detailed-info__content__main__info--body" name="Gamybosmetai">
                    <%=autokrov.gammetai%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Atsakingasasmuo">Atsakingas asmuo</label>
                <div class="detailed-info__content__main__info--body" name="Atsakingasasmuo">
                    <%=autokrov.atsaking%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="bazė">bazė</label>
                <div class="detailed-info__content__main__info--body" name="bazė">
                    <%=autokrov.baze%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Civilinisdraudimas">Civilinis draudimas</label>
                <div class="detailed-info__content__main__info--body" name="Civilinisdraudimas">
                    <%=autokrov.drcivil%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Kaskodraudimas">Kasko draudimas</label>
                <div class="detailed-info__content__main__info--body" name="Kaskodraudimas">
                    <%=autokrov.drkasko%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Eurotaršoslygis">Euro taršos lygis</label>
                <div class="detailed-info__content__main__info--body" name="Eurotaršoslygis">
                    <%=autokrov.euro%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Kurorūšis">Kuro rūšis</label>
                <div class="detailed-info__content__main__info--body" name="Kurorūšis">
                    <%=autokrov.ikurrusis%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Padalinys">Padalinys</label>
                <div class="detailed-info__content__main__info--body" name="Padalinys">
                    <%=autokrov.ipadkodas%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Pagrpaskivair">Pagr. paskirtas vairuotojas</label>
                <div class="detailed-info__content__main__info--body" name="Pagrpaskivair">
                    <%=autokrov.ipagvair%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Transpprrūšis">Transporto pr rūšis</label>
                <div class="detailed-info__content__main__info--body" name="Transpprrūšis">
                    <%=autokrov.itrrus%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Transpprtipas">Transporto pr tipas</label>
                <div class="detailed-info__content__main__info--body" name="Transpprtipas">
                    <%=autokrov.itrtipas%>
                </div>
            </div>
            <div class="detailed-info__content__main__info">
                <label class="detailed-info__content__main__info--label" for="Vinjetė">Kelių mokestis - Vinjetė</label>
                <div class="detailed-info__content__main__info--body" name="Vinjetė">
                    <%=autokrov.vinjet%>
                </div>
            </div>
        </div>
        <div class="detailed-info__content__ikainis">
            <header class="detailed-info__content__main__header">
                <span class="detailed-info__content__main__header--main">
                    Įkainis
                </span>
                <a class="detailed-info__content__main__header__buttons--editbtn" href="/autokrov/<%= autokrov._id %>/autoik/new">
                    Naujas Įkainis</a>
            </header>
            <% autokrov.ikainis.forEach(function(ikainis){ %>
                <div class="detailed-info__content__ikainis__content">
                    <div class="detailed-info__content__ikainis__content__main">
                        <label class="detailed-info__content__ikainis__content__main--label" for="darborusis">Darbo rūšis</label>
                        <div class="detailed-info__content__ikainis__content__main--body" name="darborusis">
                            <%= ikainis.idarbrus %>
                        </div>
                    </div>
                    <div class="detailed-info__content__ikainis__content__sub">
                        <label class="detailed-info__content__ikainis__content__sub--label" for="darboVntIkainis">Darbo įkainis

                        </label>
                        <div class="detailed-info__content__ikainis__content__main--body" name="darboVntIkainis">
                            <%= ikainis.idarbvnt %>
                                <%= ikainis.trikain %>
                        </div>
                    </div>
                    <div class="detailed-info__content__ikainis__buttons">
                        <% if(currentUser && ikainis.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                            <form style="display: inline" class="detailed-info__content__main__header__buttons--delete-form" action="/autokrov/<%=autokrov._id%>/autoik/<%=ikainis._id%>?_method=DELETE"
                                method="POST">
                                <button class="detailed-info__content__main__header__buttons--delbtn">TRINTI</button>
                            </form>
                            <a href="/autokrov/<%=autokrov._id%>/autoik/<%=ikainis._id%>/edit" class="detailed-info__content__main__header__buttons--editbtn">
                                REDAGUOTI
                            </a>
                            <% } %>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <small class="author"> Sukūrė
        <a href="/users/<%= autokrov.author.id %>">
            <%= autokrov.author.username %>
        </a>
    </small>

    <% include ../partials/footer %>