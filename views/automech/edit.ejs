<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <h1 style="text-align: center">Redaguoti
                <%= automech.marke %>
                    <%= automech.modelis %>
                        <%= automech.valstnr %>
            </h1>
        </header>
    </div>
    <div class="container">
        <div style="width: 40%; margin: 35px auto;">
            <form action="/automech/<%= automech._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[doc]" value="autokrov" hidden>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[marke]" placeholder="markė" value="<%= automech.marke %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[modelis]" placeholder="modelis" value="<%= automech.modelis %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[valstnr]" placeholder="valstybinis numeris" value="<%= automech.valstnr %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[id]" placeholder="id" value="<%= automech.id %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[inventnr]" placeholder="inventorinis numeris" value="<%= automech.inventnr %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[gammetai]" placeholder="gamybos metai" value="<%= automech.gammetai %>">
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automech[atsaking]" class="custom-select">
                 <option  selected><%= automech.atsaking %></option> 
                <% data.forEach(function(data){ %>
                    <% if(data.vairVardPav !== undefined){ %>
                    <option><%= data.vairVardPav %></option>  <!-- ########## reikia sukurti vairuotojus *********** -->
                    <% } %>
                <% }); %>
            </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[baze]" placeholder="bazė" value="<%= automech.baze %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[drcivil]" placeholder="draudimas civilinis" value="<%= automech.drcivil %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[drkasko]" placeholder="draudimas kasko" value="<%= automech.drkasko %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="automech[euro]" placeholder="euro taršos lygis" value="<%= automech.euro %>">
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automech[ikurrusis]" class="custom-select">
                 <option selected><%= automech.ikurrusis %></option> 
                <% data.forEach(function(data){ %>
                    <% if(data.kurrusis !== undefined){ %>
                    <% console.log(data.kurrusis) %>
                    <option><%= data.kurrusis %></option>
                    <% } %>
                <% }); %>
            </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automech[ipadkodas]" class="custom-select">
                 <option  selected><%= automech.ipadkodas %></option> 
                <% data.forEach(function(data){ %>
                    <% if(data.padkodas !== undefined){ %>
                    <option><%= data.padkodas %></option>
                    <% } %>
                <% }); %>
            </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automech[ipagvair]" class="custom-select">
                 <option  selected><%= automech.ipagvair %></option> 
                <% data.forEach(function(data){ %>
                    <% if(data.vairVardPav !== undefined){ %>
                    <option><%= data.vairVardPav %></option>
                    <% } %>
                <% }); %>
            </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automech[itrrus]" class="custom-select">
                 <option  selected><%= automech.itrrus %></option> 
                <% data.forEach(function(data){ %>
                    <% if(data.trrus !== undefined){ %>
                    <option><%= data.trrus %></option>
                    <% } %>
                <% }); %>
            </select>
                </div>
                <div class="form-group">
                    <select style="width: 100%; height: 34px" name="automech[itrtipas]" class="custom-select">
                 <option  selected><%= automech.itrtipas %></option> 
                <% data.forEach(function(data){ %>
                    <% if(data.trtipas !== undefined){ %>
                    <option><%= data.trtipas %></option>
                    <% } %>
                <% }); %>
            </select>
                </div>
                <!--<div class="form-group">-->
