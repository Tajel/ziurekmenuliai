<% include ../partials/header %> 
<div class="container">
<header class="jumbotron">
   <div class="container">
       <h1>Transporto valdymo modulis!</h1>
       <p>MECHANIZMAI TRAKTORIAI SAVAEIGES Transporto priemonės</p>
       <p>
          <a class="btn btn-primary btn-large" href="/automech/new">Nauja transporto priemone</a>
          <a class="btn btn-primary btn-large" href="/automech/kellap">Mechanizmu keliones lapai</a>
          <a class="btn btn-primary btn-large" href="/kellap/newmech">Naujas keliones lapas</a>
       </p>
   </div>
</header>
 <div class="container">
     
      </div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>1</th>
                  <th>2</th>
                  <th>3</th>
                  <th>4</th>
                  <th>5</th>
                  <th>6</th>
                  <th>7</th>
                  <th>8</th>
                </tr>
              </thead>
              <tbody>
                <% alltrmech.forEach(function(trans){ %>
                    <tr>
                      <td><strong><%=trans.marke%></strong></td>
                      <td><strong><%=trans.modelis%></strong></td>
                      <td><strong><%=trans.valstnr%></strong></td>
                      <td><strong><%=trans.inventnr%></strong></td>
                      <td>
                          <% if(currentUser && trans.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" href="/automech/<%= trans._id %>/edit">Redaguoti</a>
                            <% }%>
                      </td><td>
                          <% if(currentUser && trans.author.id.equals(currentUser._id)){ %>
                            <form id="delete-form" action="/automech/<%= trans._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Istrinti</button>
                            </form>
                            <% }%>
                      </td>
                      <td><a href="/automech/<%= trans._id %>" class="btn btn-xs btn-primary">Detali informacija</a></td>
                      <td><a href="/automech/<%= trans._id %>/krovkellap" class="btn btn-xs btn-primary">Kelionės lapai</a></td>
                    <% }); %>
                    </tr>
              </tbody>
            </table>
<% include ../partials/footer %>
  
</div>
