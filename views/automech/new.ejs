<% include ../partials/header %>
    <div>
        <div class="row">
            <h1 style="text-align: center">Nauja transporto priemonė</h1>
            <div style="width: 30%; margin: 25px auto;">
                <a class="btn btn-default btn-xs" href="/automech">Atgal</a>
                <hr>
                <form action="/automech" method="POST">
                    <div class="form-group" hidden>
                        <input class="form-control" type="text" name="automech[doc]" value="automech">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[marke]" placeholder="markė">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[modelis]" placeholder="modelis">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[valstnr]" placeholder="valstybinis numeris">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[id]" placeholder="id">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[inventnr]" placeholder="inventorinis numeris">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[gammetai]" placeholder="gamybos metai">
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automech[atsaking]" class="custom-select">
                            <option  selected>Pasirinkite ATSAKINGĄ asmenį</option> 
                            <% data.forEach(function(data){ %>
                                <% if(data.vairVardPav !== undefined){ %>
                                <% console.log('Atsakingas: '+data.vairVardPav) %>
                                <option><%= data.vairVardPav %></option>
                                <% } %>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[baze]" placeholder="bazė">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[drcivil]" placeholder="draudimas civilinis">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[drkasko]" placeholder="draudimas kasko">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="automech[euro]" placeholder="euro taršos lygis">
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automech[ikurrusis]" class="custom-select">
                     <option  selected>Pasirinkite KURO rušį</option> 
                    <% data.forEach(function(data){ %>
                        <% if(data.kurrusis !== undefined){ %>
                        <% console.log('Kuro rusis: '+data.kurrusis) %>
                        <option><%= data.kurrusis %></option>
                        <% } %>
                    <% }); %>
                </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automech[ipadkodas]" class="custom-select">
                     <option  selected>Pasirinkite Padlinį</option> 
                    <% data.forEach(function(data){ %>
                        <% if(data.padkodas !== undefined){ %>
                        <% console.log('Padalinio Kodas: '+data.padkodas) %>
                        <option><%= data.padkodas %></option>
                        <% } %>
                    <% }); %>
                </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automech[ipagvair]" class="custom-select">
                     <option  selected>Pasirinkite pagr vairuotoją</option> 
                    <% data.forEach(function(data){ %>
                        <% if(data.vairVardPav !== undefined){ %>
                        <% console.log('Pagrindinis Vairuotojas: '+data.vairVardPav) %>
                        <option><%= data.vairVardPav %></option>
                        <% } %>
                    <% }); %>
                </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automech[itrrus]" class="custom-select">
                     <option  selected>Pasirinkite priemonės rūšį</option> 
                    <% data.forEach(function(data){ %>
                        <% if(data.trrus !== undefined){ %>
                        <% console.log('Transporto rusis: '+data.trrus) %>
                        <option><%= data.trrus %></option>
                        <% } %>
                    <% }); %>
                </select>
                    </div>
                    <div class="form-group">
                        <select style="width: 100%; height: 34px" name="automech[itrtipas]" class="custom-select">
                     <option  selected>Pasirinkite Transporto priemonės tipą</option> 
                    <% data.forEach(function(data){ %>
                        <% if(data.trtipas !== undefined){ %>
                        <% console.log('Transporto TIPAS: '+data.trtipas) %>
                        <option><%= data.trtipas %></option>
                        <% } %>
                    <% }); %>
                </select>
                    </div>
                    <!--<div class="form-group">-->
                    <!--    <input class="form-control" type="text" name="automech[vinjet]" placeholder="Kelių mokesčiai">-->
                    <!--</div>-->
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>