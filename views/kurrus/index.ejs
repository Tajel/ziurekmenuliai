<% include ../partials/header %>

    <div class="page-header">
        <h1>KURO RŪŠYS
            <small>Sukurti naują, redaguoti, trinti</small>
        </h1>
        <p>
            <a class="btn btn-primary btn-large" href="/kurrus/new">Nauja kuro rūšis</a>
        </p>
    </div>
    <div class="row">
        <% allkurrus.forEach(function(allkurrus){ %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>
                            <strong>
                                <%= allkurrus.kurorusiskodas %>
                            </strong>
                        </h3>
                        <h4>
                            <%= allkurrus.kurrusis %>
                        </h4>
                        <p>
                            <a href="/kurrus/<%= allkurrus._id%>/edit" class="btn btn-primary" role="button">REDAGUOTI</a>
                            <form id="delete-form" action="/kurrus/<%=allkurrus._id%>?_method=DELETE" , method=POST>
                                <button class="btn btn-danger">TRINTI</button>
                            </form>
                        </p>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
    <% include ../partials/footer %>