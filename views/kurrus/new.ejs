<% include ../partials/header %>

    <form action="/kurrus" method="POST" class="data-newForm">
        <legend class="data-newForm__legend">Nauja kuro rūšis</legend>
        <a href="/kurrus" class="data-newForm__link">
            <svg class="data-newForm__link__icon">
                <use xlink:href="/img/sprite.svg#icon-back"></use>
            </svg> Atgal į Kuro rūšių sąrašą </a>
        <!-- Form Name -->

        <div class="data-newForm__content">
            <!-- Text input-->
            <div class="data-newForm__content__input--hidden">
                <label class="data-newForm__content__input--label" for="doc">kurorusis</label>
                <div class="data-newForm__content__input--body">
                    <input id="doc" name="doc" type="text" placeholder="kurorusis" class="data-newForm__content__input--body--text" value="kurorusis">
                    <span class="data-newForm__content__input--body--span">help</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="kurorusiskodas">Kuro rūšies kodas</label>
                <div class="data-newForm__content__input--body">
                    <input id="kurorusiskodas" name="kurorusiskodas" type="text" placeholder="Kodas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">Įrašykite kuro rūšies kodą</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="data-newForm__content__input">
                <label class="data-newForm__content__input--label" for="kurrusis">Pavadinimas</label>
                <div class="data-newForm__content__input--body">
                    <input id="kurrusis" name="kurrusis" type="text" placeholder="Pavadinimas" class="data-newForm__content__input--body--text">
                    <span class="data-newForm__content__input--body--span">Įrašykite kuro rūšies pavadinimą</span>
                </div>
            </div>

            <!-- Button -->
            <div class="data-editForm__button">
                <button name="submit" class="data-editForm__button--submit ">
                    <svg class="data-editForm__button--submit--icon">
                        <use xlink:href="/img/sprite.svg#icon-new-message">
                    </svg> Sukurti
                </button>
            </div>
        </div>
    </form>
    <% include ../partials/footer %>